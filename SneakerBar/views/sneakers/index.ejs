<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1><i class="fas fa-globe-americas"></i> Welcome To SneakerBar</h1>
                <p>View our hand-picked sneakers from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/sneakers/new">Add New Sneaker</a>
                </p>
                <p>
                    <form action="/sneakers" method="GET" class="form-inline">
                        <div class="form-group">
                            <input type="text" name= "search" placeholder="Sneaker search..." class="form-control">
                            <input type="submit" value="Search" class="btn btn-default">
                        </div>
                    </form>
                </p>
            </div>
        </header>

        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% sneakers.forEach(function(sneaker){ %>
               <div class="col-md-3 col-sm-6">
                   <div class="thumbnail">
                       <img src="<%= sneaker.image %>">
                       <div class="caption">
                           <h4><%= sneaker.name %></h4>
                       </div>
                       <p>
                           <a href="/sneakers/<%= sneaker._id %>" class="btn btn-primary">More Info</a>
                       </p>
                   </div>
               </div>
            <% }); %>
        </div>
    </div>
    

<% include ../partials/footer %>