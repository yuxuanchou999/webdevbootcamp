<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">SneakerBar</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <form action="/sneakers/<%= sneaker._id %>/ratings" method="POST">
                <div class="form-group">
                    <label for="rating">Leave a rating:</label>
                    <fieldset class="starability-basic form-group" id="rating">
                      <input type="radio" id="first-rate5" name="rating[rating]" value="5" />
                      <label for="first-rate5" title="Amazing">5 stars</label>
                      <input type="radio" id="first-rate4" name="rating[rating]" value="4" />
                      <label for="first-rate4" title="Very good">4 stars</label>
                      <input type="radio" id="first-rate3" name="rating[rating]" value="3" />
                      <label for="first-rate3" title="Average">3 stars</label>
                      <input type="radio" id="first-rate2" name="rating[rating]" value="2" />
                      <label for="first-rate2" title="Not good">2 stars</label>
                      <input type="radio" id="first-rate1" name="rating[rating]" value="1" />
                      <label for="first-rate1" title="Terrible">1 star</label>
                    </fieldset>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary">Submit</button>
                </div>
            </form>
            <div>
                Current Rating: <%= sneaker.rating.toFixed(2) %>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= sneaker.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$<%= sneaker.price %></h4>
                    <h4><a><%=sneaker.name %></a></h4>
                    <p><%= sneaker.description %></p>
                    <p>
                        <em>Submitted by <a href="/users/<%= sneaker.author.id %>"><%= sneaker.author.username %></a>, <%= moment(sneaker.createdAt).fromNow() %> </em>
                    </p>
                    <% if(currentUser && sneaker.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/sneakers/<%= sneaker._id %>/edit">Edit</a>
                        <form id="delete-form" action="/sneakers/<%= sneaker._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/sneakers/<%= sneaker._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% sneaker.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/sneakers/<%=sneaker._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form id="delete-form" action="/sneakers/<%=sneaker._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>