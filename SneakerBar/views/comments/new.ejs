<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center"> Add New Comment to <%= sneaker.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/sneakers/<%= sneaker._id %>/comments" method="POST">
                <div class="form-group">
                    <label for="text">Comment:</label>
                    <input class="form-control" id="text" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/sneakers">Back</a>
        </div>
    </div>
    
</div>

<% include ../partials/footer %>